/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "!src/**/*.server.ts",// exclui server.ts
    "!src/assets/environments/*.ts" // exclui environment.prod.ts
  ],
  "exclude": [
    "src/main.server.ts",            // SSR fora do build do dev
    "src/app/app.config.server.ts",  // config do SSR fora
    "src/assets/environments/**",    // qualquer env perdido em assets
    "src/environments/environment.prod.ts", // se existir aqui, exclui do dev
    "src/**/*.spec.ts",
    "src/test.ts"
  ]
}
